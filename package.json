{
  "name": "@echelon-solutions/aws-event-sourcing",
  "version": "0.1.9",
  "description": "A straightforward way to build event based applications with AWS Lambda.",
  "author": "Khalid Zoabi <kzoabi@outlook.com>",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "homepage": "https://github.com/echelon-solutions/aws-event-sourcing#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/echelon-solutions/aws-event-sourcing.git"
  },
  "bugs": {
    "url": "https://github.com/echelon-solutions/aws-event-sourcing/issues"
  },
  "license": "MIT",
  "keywords": [
    "event-sourcing",
    "event-driven",
    "aws",
    "aws-lambda",
    "serverless",
    "serverless-framework",
    "typescript"
  ],
  "scripts": {
    "info": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc mocha --exit -r ts-node/register src/**/*.test.ts",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "cov": "run-s build test:unit cov:html && opn coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --statements 90 --branches 80 --functions 100 --lines 90",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "trash build test",
    "all": "run-s reset test cov:check doc:html",
    "prepare-release": "run-s all version doc:publish",
    "serverless:dev": "serverless dynamodb install && serverless offline start",
    "serverless:upload": "serverless deploy function --function $FUNCTION",
    "serverless:deploy": "serverless deploy",
    "serverless:undeploy": "serverless remove",
    "serverless:logs": "serverless logs -f $FUNCTION -t",
    "serverless:metrics": "serverless metrics -f $FUNCTION",
    "load": "artillery run artillery.yml"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release",
    "serverless": "Run serverless deployment commands",
    "load": "Load test the deployed API"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "dependencies": {
    "aws-sdk": "^2.797.0",
    "aws-xray-sdk": "^3.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "serverless-http": "^2.6.0",
    "source-map-support": "^0.5.19",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.64",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.0.4",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "artillery": "^1.6.1",
    "chai": "^4.2.0",
    "codecov": "^3.8.1",
    "cz-conventional-changelog": "^3.3.0",
    "dynamodb-local": "0.0.31",
    "gh-pages": "^3.1.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "npm-scripts-info": "^0.3.9",
    "nyc": "^15.1.0",
    "opn-cli": "^4.1.0",
    "prettier": "^2.2.0",
    "serverless": "^2.0.0",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-iam-roles-per-function": "^2.0.2",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-plugin-typescript": "^1.1.9",
    "standard-version": "^9.0.0",
    "supertest": "^6.0.1",
    "trash-cli": "^4.0.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
